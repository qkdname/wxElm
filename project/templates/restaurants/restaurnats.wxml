<template name='restaurants'>
  <view class="resta-list">
    <block wx:for='{{restaurants}}' wx:key='{{index}}'>
      <navigator url='{{"../shop/shop?id="+item.restaurant.id+"&name="+item.restaurant.name}}' class="pos-r" style="padding: 30rpx 20rpx 30rpx 170rpx;min-height: 130rpx;line-height: 1.5;">
        <image src='{{item.restaurant.image_path}}' class="pos-a" style="top: 30rpx;left: 20rpx;width: 130rpx;height: 130rpx;"></image>
        <view>
          <view class="fx-sbt alm-c">
            <view>
              <text class="light" style="margin-right:10rpx;background: #fff100;font-size: 28rpx">品牌</text>
              <text style="font-weight: bold">{{item.restaurant.name}}</text>
            </view>
            <view>
              <block  wx:for='{{item.restaurant.supports}}' wx:for-item='ite' wx:for-index='inde' wx:key='{{inde}}'>
                <text style="margin-right: 10rpx;">{{ite.icon_name}}</text>
              </block>
            </view>
          </view>
          <view style="font-size: 28rpx;color: #666">

            <view class="fx-sbt alm-c">
              <view>
                评分：<text>{{item.restaurant.rating}}</text>
                月售：<text>{{item.restaurant.recent_order_num}}</text>
              </view>
              <view><text style="background:#1e89e0;color:#fff">{{item.restaurant.delivery_mode.text}}</text></view>
              
            </view>
            <view class="fx-sbt alm-c">
              <view>
                <text>￥{{item.restaurant.float_minimum_order_amount}}起送 | </text>
                <text>配送费￥{{item.restaurant.float_delivery_fee}}</text>
              </view>
              <view>
                <text>{{item.restaurant.distance/1000}}km | </text>{{item.restaurant.order_lead_time}}分钟
              </view>
            </view>
            
          </view>
        </view>
      </navigator>
    </block>
  </view>
</template>